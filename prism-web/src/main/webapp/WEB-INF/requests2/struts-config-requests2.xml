<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<!-- This is the configuration file for Request Actions -->
<struts-config>

    <action-mappings>
        <action path="/requests/advancedsearchmaterialsrequests"
                type="org.springframework.web.struts.DelegatingActionProxy"
                name="searchRequestsForm"
                scope="session"
                parameter="advancedSearchMaterialsRequests">
            <forward name="success" path="/requests/advancedSearchMaterialsRequests.jsp"/>
        </action>
    </action-mappings>

</struts-config>
